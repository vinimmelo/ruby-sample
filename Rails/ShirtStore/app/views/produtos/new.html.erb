<%= form_for Produto.new do |f| %>
  <div class="form-group">
    <%= f.label :nome %> <%= f.text_field :nome, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :descricao %> <%= f.text_area :descricao, class: "form-control"%>
  </div>
  <div class="form-inline">
    <div class="form-group">
      <%= f.label :quantidade %> <%= f.number_field :quantidade, class: "form-control", step: 1 %>
    </div>
    <div class="form-group">
      <%= f.label :preco %> <%= f.number_field :preco, step: 0.1, class: "form-control" %>
    </div>
  </div>

  <%= f.submit "Criar o produto!", class: "btn-primary btn" %>
<% end %>
